<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    tools:context=".MainActivity">



        <TextView
            android:id="@+id/tv_main_nama"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:layout_marginBottom="4dp"
            android:gravity="bottom"
            android:text="Nama Sekolah"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_main_alamat"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:layout_below="@id/tv_main_nama"
            android:layout_marginBottom="4dp"
            android:gravity="bottom"
            android:text="Alamat Sekolah"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_main_jumlahsiswa"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:layout_below="@id/tv_main_alamat"
            android:layout_marginBottom="4dp"
            android:gravity="bottom"
            android:text="Jumlah Siswa"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_main_jumlahguru"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:layout_below="@id/tv_main_jumlahsiswa"
            android:layout_marginBottom="4dp"
            android:gravity="bottom"
            android:text="Jumlah Guru"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/et_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_main_nama"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/et_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_main_nama"
            android:layout_toRightOf="@id/tv_main_alamat"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/et_siswa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_main_alamat"
            android:layout_toRightOf="@id/tv_main_jumlahsiswa"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/et_guru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_main_jumlahsiswa"
            android:layout_toRightOf="@id/tv_main_jumlahguru"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_guru"
            android:text="Submit" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_main"
            android:layout_margin="4dp"
            android:background="@android:color/holo_blue_light"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btn_submit">

        </android.support.v7.widget.RecyclerView>


    </RelativeLayout>